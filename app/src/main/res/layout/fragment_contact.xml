<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:paddingLeft="23dp"
    android:paddingRight="23dp">

    <TextView
        android:id="@+id/emergency_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FRIENDS"
        android:textColor="@color/belize_hole"
        android:fontFamily="@font/passengersansblack"
        android:textSize="23sp"/>

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emergency_title"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacted when you in distress"
        android:fontFamily="@font/passengersansregular"
        android:textSize="12sp" />

    <Button
        android:id="@+id/fragment_contact_btn_add"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Add New One"
        android:fontFamily="@font/passengersansbold"
        android:textSize="12sp"
        android:textColor="#52baff"
        android:backgroundTint="@color/midnight_blue"/>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_marginBottom="70dp"
        android:id="@+id/contact_list"
        app:layout_constraintTop_toBottomOf="@id/emergency_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/passengersanssemibold"
        android:textSize="12sp"
        android:lineHeight="16sp"
        android:text="INFO\nWhen you are in distress, these contacts will receive notification such as 'message' about your condition"/>

    <!-- No Friends -->
    <LinearLayout
        android:id="@+id/contact_zero"
        app:layout_constraintTop_toBottomOf="@id/emergency_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="90dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:src="@drawable/phone"
            android:rotation="14"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Friends!"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textColor="@color/midnight_blue"
            android:fontFamily="@font/passengersansbold"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add your first friend now"
            android:textAlignment="center"
            android:fontFamily="@font/passengersanssemibold"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
