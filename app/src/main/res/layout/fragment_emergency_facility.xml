<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/emergencyFacilityImage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/lady_with_phone"/>

        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emergencyFacilityImage"
            android:id="@+id/emergencyFacilityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Facility Name"
            android:textColor="@color/belize_hole"
            android:fontFamily="@font/passengersansblack"
            android:textSize="24sp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/emergencyFacilityDetail"
            app:layout_constraintTop_toBottomOf="@id/emergencyFacilityName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Data"
            android:textSize="16sp"
            android:fontFamily="@font/passengersanslight"/>

        <Button
            app:layout_constraintTop_toBottomOf="@id/emergencyFacilityDetail"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/emergencyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALL SERVICE"
            android:fontFamily="@font/passengersansbold"
            android:backgroundTint="@android:color/holo_red_dark"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>